{% extends 'base.html.twig' %}

{% block title %}Nouvelle Transaction{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Enregistrer une nouvelle transaction</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="card shadow-sm mt-4" style="max-width: 600px;">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="label" class="form-label">Libellé</label>
                    <input type="text" class="form-control" id="label" name="label" required placeholder="Ex: Vente produit X">
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Type de transaction</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="is_impaye" id="type_standard" value="0" checked onchange="toggleImpayeFields()">
                        <label class="form-check-label" for="type_standard">
                            Standard (Recette/Dépense)
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="is_impaye" id="type_impaye" value="1" onchange="toggleImpayeFields()">
                        <label class="form-check-label" for="type_impaye">
                            Impayé
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="value" class="form-label">Montant (€)</label>
                    <input type="number" step="0.01" class="form-control" id="value" name="value" required placeholder="Ex: 50.00">
                    <div class="form-text" id="amount_help">Utilisez un montant positif pour une recette, négatif pour une dépense.</div>
                </div>

                <div class="mb-3 d-none" id="motif_container">
                    <label for="motif" class="form-label">Motif de l'impayé</label>
                    <select class="form-select" id="motif" name="motif">
                        <option value="">-- Sélectionner un motif --</option>
                        {% for code, label in motifs %}
                            <option value="{{ code }}">{{ code }} - {{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="d-flex justify-content-end">
                    <a href="{{ path('app_commercant') }}" class="btn btn-secondary me-2">Annuler</a>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function toggleImpayeFields() {
        const isImpaye = document.getElementById('type_impaye').checked;
        const motifContainer = document.getElementById('motif_container');
        const amountHelp = document.getElementById('amount_help');
        const motifSelect = document.getElementById('motif');

        if (isImpaye) {
            motifContainer.classList.remove('d-none');
            amountHelp.innerText = "Le montant sera automatiquement enregistré en négatif.";
            motifSelect.required = true;
        } else {
            motifContainer.classList.add('d-none');
            amountHelp.innerText = "Utilisez un montant positif pour une recette, négatif pour une dépense.";
            motifSelect.required = false;
        }
    }
</script>
{% endblock %}