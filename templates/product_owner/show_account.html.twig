{% extends 'base.html.twig' %}

{% block title %}Détails Compte - {{ compte.label }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_product_owner') }}">Liste des comptes</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ compte.label }}</li>
      </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center">
        <h1>Détails du compte: {{ compte.label }}</h1>
        <div>
            <a href="{{ path('app_product_owner') }}" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
            <span class="badge bg-secondary">SIREN: {{ compte.numeroSiren }}</span>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-muted">Solde Global</h5>
                    <p class="card-text h2 {% if compte.balance < 0 %}text-danger{% endif %}">
                        {{ compte.balance|number_format(2, ',', ' ') }} {{ compte.devise }}
                    </p>
                    <hr>
                    <p><strong>Utilisateur:</strong> {{ compte.user ? compte.user.username : 'Non assigné' }}</p>
                    <p><strong>Devise:</strong> {{ compte.devise }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Évolution de la Trésorerie</h5>
                    <canvas id="treasuryChart" width="400" height="180"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="card-title">Historique des Transactions</h5>
            <div class="table-responsive">
                <table class="table table-hover mt-3">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Libellé</th>
                            <th class="text-end">Montant</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for transaction in compte.transactions|sort((a, b) => b.createdAt <=> a.createdAt) %}
                            <tr>
                                <td>{{ transaction.createdAt|date('d/m/Y H:i') }}</td>
                                <td>{{ transaction.label }}</td>
                                <td class="text-end {% if transaction.value < 0 %}text-danger{% endif %}">
                                    {{ transaction.value|number_format(2, ',', ' ') }} {{ compte.devise }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">Aucune transaction trouvée.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('treasuryChart').getContext('2d');
    
    {% set balance_evolution = [] %}
    {% set current_running_balance = 0 %}
    {% set labels = [] %}
    
    {% for transaction in compte.transactions|sort((a, b) => a.createdAt <=> b.createdAt) %}
        {% set current_running_balance = current_running_balance + transaction.value %}
        {% set labels = labels|merge([transaction.createdAt|date('d/m/Y')]) %}
        {% set balance_evolution = balance_evolution|merge([current_running_balance]) %}
    {% endfor %}

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: {{ labels|json_encode|raw }},
            datasets: [{
                label: 'Solde ({{ compte.devise }})',
                data: {{ balance_evolution|json_encode|raw }},
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.1,
                fill: true
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: false
                }
            }
        }
    });
</script>
{% endblock %}
