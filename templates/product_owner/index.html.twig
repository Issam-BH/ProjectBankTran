{% extends 'base.html.twig' %}

{% block title %}Product Owner - Tableau de bord{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Tableau de bord</h1>
        <span class="badge bg-primary">Product Owner</span>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title"><i class="bi bi-collection fs-2"></i><br>Suivi des remises</h5>
                    <a href="{{ path('app_remise') }}" class="btn btn-primary mt-auto">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title"><i class="bi bi-exclamation-triangle fs-2"></i><br>Analyse des impayés</h5>
                    <a href="{{ path('app_impaye') }}" class="btn btn-primary mt-auto">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title"><i class="bi bi-pie-chart fs-2"></i><br>Rapports globaux</h5>
                    <a href="{{ path('app_rapport') }}" class="btn btn-primary mt-auto">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title"><i class="bi bi-person-plus fs-2"></i><br>Demandes de création</h5>
                    <a href="{{ path('app_product_owner_account_request') }}" class="btn btn-primary mt-auto">Accéder</a>
                </div>
            </div>
        </div>
    </div>

    <h2 class="mt-5 h4">Annonces de trésorerie - Tous les comptes</h2>

    <div class="card shadow-sm mt-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a href="{{ path('app_product_owner', {sort: 'siren', direction: currentSort == 'siren' and currentDirection == 'asc' ? 'desc' : 'asc'}) }}" class="text-decoration-none text-dark">
                                    N° de SIREN
                                    {% if currentSort == 'siren' %}
                                        <i class="bi bi-caret-{{ currentDirection == 'asc' ? 'up' : 'down' }}-fill"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th>Raison sociale</th>
                            <th class="text-center">Transactions</th>
                            <th class="text-center">Devise</th>
                            <th class="text-end">
                                <a href="{{ path('app_product_owner', {sort: 'balance', direction: currentSort == 'balance' and currentDirection == 'asc' ? 'desc' : 'asc'}) }}" class="text-decoration-none text-dark">
                                    Solde Global
                                    {% if currentSort == 'balance' %}
                                        <i class="bi bi-caret-{{ currentDirection == 'asc' ? 'up' : 'down' }}-fill"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for compte in comptes %}
                            <tr {% if compte.balance < 0 %}class="table-danger-light"{% endif %}>
                                <td>{{ compte.numeroSiren }}</td>
                                <td>{{ compte.label }}</td>
                                <td class="text-center">{{ compte.transactions|length }}</td>
                                <td class="text-center">{{ compte.devise }}</td>
                                <td class="text-end fw-bold {% if compte.balance < 0 %}text-danger{% endif %}">
                                    {{ compte.balance|number_format(2, ',', ' ') }}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_product_owner_account_show', {id: compte.id}) }}" class="btn btn-sm btn-outline-primary">
                                        Voir détails
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">Aucun compte trouvé.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-danger-light {
        background-color: #f8d7da33;
    }
</style>

{# Bootstrap Icons CDN #}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}