{% extends 'base.html.twig' %}

{% block title %}Demande de Compte{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <a href="{{ path('app_product_owner') }}" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        <h1 class="mb-0">Demande de Compte Commerçant</h1>
    </div>

    {# Section 1 : Comptes clients existants #}
    <div class="card shadow-sm mb-5">
        <div class="card-header">
            <h2 class="h5 mb-0">Comptes clients existants</h2>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for compte in comptes %}
                            <tr>
                                <td>{{ compte.id }}</td>
                                <td>{{ compte.username }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2" class="text-center">Aucun compte client disponible pour le moment.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Section 2 : Formulaire de demande PO #}
    <div class="card shadow-sm" style="max-width: 600px;">
        <div class="card-header">
            <h2 class="h5 mb-0">Créer une nouvelle demande de compte</h2>
        </div>
        <div class="card-body">
            {% if message %}
                <div class="alert alert-success">
                    {{ message|raw }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Nom Entreprise :</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Numéro Siret :</label>
                    <input type="text" name="password" id="password" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="action" class="form-label">Action :</label>
                    <select name="action" id="action" class="form-select" required>
                        <option value="create">Créer</option>
                        <option value="delete">Supprimer</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Envoyer la demande</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
