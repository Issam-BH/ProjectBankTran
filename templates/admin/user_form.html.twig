{% extends 'base.html.twig' %}

{% block title %}{% if is_new %}Créer un utilisateur{% else %}Modifier l'utilisateur{% endif %}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="mb-0">{% if is_new %}Créer un utilisateur{% else %}Modifier l'utilisateur{% endif %}</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.username) }}
                        {{ form_row(form.roles) }}
                        {{ form_row(form.plainPassword, {
                            label: 'Mot de passe'
                        }) }}

                        <button type="submit" class="btn btn-primary mt-3">
                            {% if is_new %}Créer{% else %}Enregistrer les modifications{% endif %}
                        </button>
                        <a href="{{ path('app_admin_users') }}" class="btn btn-secondary mt-3">Annuler</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
