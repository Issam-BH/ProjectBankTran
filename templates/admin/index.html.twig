{% extends 'base.html.twig' %}

{% block title %}Espace Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Espace Admin</h1>
        <a href="{{ path('app_admin_users') }}" class="btn btn-info">
            <i class="bi bi-people"></i> Gestion des utilisateurs
        </a>
    </div>
    
    <h2 class="h4 mb-3">Gestion des demandes PO</h2>

    {% if message %}
        <div class="alert alert-success">{{ message|raw }}</div>
    {% endif %}

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="get" action="{{ path('app_admin') }}" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="request_id" class="form-label fw-bold">Demandes du Product Owner :</label>
                </div>
                <div class="col-auto">
                    <select name="request_id" id="request_id" class="form-select" onchange="this.form.submit()">
                        <option value="">-- Sélectionner une demande --</option>
                        {% for req in requests %}
                            <option value="{{ req.id }}" {% if selected and selected.id == req.id %}selected{% endif %}>
                                {{ req.username }} — {{ req.action }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </form>

            {% if selected %}
            <hr class="my-4">
            <h3 class="h5">Créer le compte client pour la demande sélectionnée</h3>
            <form method="post">
                <input type="hidden" name="request_id" value="{{ selected.id }}">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" id="username" name="username" class="form-control" value="{{ selected.username }}" required>
                    </div>
                    <div class="col-md-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" class="form-control" value="{{ selected.password }}" required>
                    </div>
                    <div class="col-md-6">
                        <label for="action" class="form-label">Action</label>
                        <input type="text" id="action" name="action" class="form-control" value="{{ selected.action }}" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="status" class="form-label">Status</label>
                        <input type="text" id="status" name="status" class="form-control" value="{{ selected.status }}" readonly>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Créer le compte</button>
            </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
