{% extends 'base.html.twig' %}

{% block title %}Espace Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Espace Admin</h1>
        <a href="{{ path('app_admin_users') }}" class="btn btn-info">
            <i class="bi bi-people"></i> Gestion des utilisateurs
        </a>
    </div>
    
    <h2 class="h4 mb-3">Gestion des demandes PO</h2>

    {% if message %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message|raw }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="get" action="{{ path('app_admin') }}" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="request_id" class="form-label fw-bold">Demandes du Product Owner :</label>
                </div>
                <div class="col-auto">
                    <select name="request_id" id="request_id" class="form-select" onchange="this.form.submit()">
                        <option value="">-- Sélectionner une demande --</option>
                        {% for req in requests %}
                            <option value="{{ req.id }}" {% if selected and selected.id == req.id %}selected{% endif %}>
                                {{ req.username }} — {{ req.action|upper }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </form>

            {% if selected %}
            <hr class="my-4">
            <h3 class="h5">Traitement de la demande : {{ selected.action|upper }}</h3>
            <form method="post">
                <input type="hidden" name="request_id" value="{{ selected.id }}">
                <input type="hidden" name="action" value="{{ selected.action }}">
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Entreprise (transmis par PO)</label>
                        <input type="text" name="entreprise_nom" class="form-control bg-light" value="{{ selected.username }}" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">SIRET (transmis par PO)</label>
                        <input type="text" name="siret" class="form-control bg-light" value="{{ selected.password }}" readonly>
                    </div>

                    {% if selected.action == 'create' %}
                        <div class="col-md-6">
                            <label for="admin_username" class="form-label fw-bold text-primary">Username technique (Admin)</label>
                            <input type="text" id="admin_username" name="admin_username" class="form-control border-primary" required>
                        </div>
                        <div class="col-md-6">
                            <label for="admin_password" class="form-label fw-bold text-primary">Mot de passe (Admin)</label>
                            <input type="password" id="admin_password" name="admin_password" class="form-control border-primary" required>
                        </div>
                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary">Créer le compte</button>
                        </div>
                    {% else %}
                        <div class="col-12 mt-3">
                            <div class="alert alert-warning">Confirmer la suppression pour l'entreprise <strong>{{ selected.username }}</strong>.</div>
                            <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                        </div>
                    {% endif %}
                </div>
            </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}