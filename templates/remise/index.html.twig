{% extends 'base.html.twig' %}

{% block title %}Liste des Remises{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="mb-3">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin') }}" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Retour au Dashboard</a>
        {% elseif is_granted('ROLE_PO') %}
            <a href="{{ path('app_product_owner') }}" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Retour au Dashboard</a>
        {% elseif is_granted('ROLE_COMMERCANT') %}
            <a href="{{ path('app_commercant') }}" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Retour au Dashboard</a>
        {% endif %}
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des Remises</h1>

        <div class="d-flex align-items-center">
            {% if is_granted('ROLE_COMMERCANT') and not is_granted('ROLE_PO') %}
                <a href="{{ path('app_remise_new') }}" class="btn btn-success me-3">
                    <i class="bi bi-plus-lg"></i> Nouvelle Remise
                </a>
            {% endif %}
            <div class="dropdown me-3">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-download"></i> Exporter
                </button>
                <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                    <li><a class="dropdown-item" href="{{ path('app_remise_export', app.request.query.all|merge({format: 'csv', page: null, limit: null})) }}">Export CSV</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_remise_export', app.request.query.all|merge({format: 'xls', page: null, limit: null})) }}">Export XLS</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_remise_export', app.request.query.all|merge({format: 'pdf', page: null, limit: null})) }}">Export PDF</a></li>
                </ul>
            </div>
            <div class="text-muted">
                <span class="fw-bold">{{ totalCount }}</span> résultats trouvés
            </div>
        </div>
    </div>

    {# Filters #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="q" class="form-label">Rechercher par numéro</label>
                    <input type="text" class="form-control" id="q" name="q" value="{{ q }}" placeholder="N° Remise...">
                </div>
                
                {% if is_granted('ROLE_PO') %}
                <div class="col-md-3">
                    <label for="compte_id" class="form-label">Filtrer par compte</label>
                    <select class="form-select" id="compte_id" name="compte_id" onchange="this.form.submit()">
                        <option value="">Tous les comptes</option>
                        {% for compte in comptes %}
                            <option value="{{ compte.id }}" {% if compte.id == compteId %}selected{% endif %}>
                                {{ compte.label }} ({{ compte.numeroSiren }})
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}

                <div class="col-md-2">
                    <label for="limit" class="form-label">Lignes par page</label>
                    <select class="form-select" id="limit" name="limit" onchange="this.form.submit()">
                        <option value="5" {% if limit == 5 %}selected{% endif %}>5</option>
                        <option value="10" {% if limit == 10 %}selected{% endif %}>10</option>
                        <option value="20" {% if limit == 20 %}selected{% endif %}>20</option>
                        <option value="50" {% if limit == 50 %}selected{% endif %}>50</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    {# Table #}
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;"></th>
                            <th>Numéro</th>
                            <th>Date</th>
                            {% if is_granted('ROLE_PO') %}
                                <th>Compte (SIREN)</th>
                            {% endif %}
                            <th class="text-center">Transactions</th>
                            <th class="text-end">Montant Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for remise in remises %}
                            {% set totalAmount = remise.totalAmount %}
                            <tr class="align-middle" style="cursor: pointer;" onclick="toggleDetails({{ remise.id }})">
                                <td class="text-center">
                                    <i id="icon-{{ remise.id }}" class="bi bi-plus-circle text-primary"></i>
                                </td>
                                <td class="fw-bold">{{ remise.numero }}</td>
                                <td>{{ remise.dateCreation|date('d/m/Y H:i') }}</td>
                                {% if is_granted('ROLE_PO') %}
                                    <td>
                                        {{ remise.compteClient.label }} 
                                        <small class="text-muted">({{ remise.compteClient.numeroSiren }})</small>
                                    </td>
                                {% endif %}
                                <td class="text-center">
                                    <span class="badge bg-secondary rounded-pill">{{ remise.transactions|length }}</span>
                                </td>
                                <td class="text-end fw-bold {% if totalAmount < 0 %}text-danger{% endif %}">
                                    {{ totalAmount|number_format(2, ',', ' ') }} {{ remise.compteClient.devise }}
                                </td>
                            </tr>
                            {# Details Row #}
                            <tr id="details-{{ remise.id }}" class="d-none bg-light">
                                <td colspan="{% if is_granted('ROLE_PO') %}6{% else %}5{% endif %}">
                                    <div class="p-3">
                                        <h6 class="border-bottom pb-2 mb-3">Détails des transactions</h6>
                                        <table class="table table-sm table-bordered bg-white">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Libellé</th>
                                                    <th>Date</th>
                                                    <th class="text-end">Montant</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for transaction in remise.transactions %}
                                                    <tr>
                                                        <td>{{ transaction.id }}</td>
                                                        <td>{{ transaction.label }}</td>
                                                        <td>{{ transaction.createdAt|date('d/m/Y H:i') }}</td>
                                                        <td class="text-end {% if transaction.value < 0 %}text-danger{% endif %}">
                                                            {{ transaction.value|number_format(2, ',', ' ') }}
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr><td colspan="4" class="text-center">Aucune transaction</td></tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">Aucune remise trouvée.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Pagination #}
    {% if totalPages > 1 %}
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path('app_remise', app.request.query.all|merge({'page': currentPage - 1})) }}">Précédent</a>
            </li>
            {% for i in 1..totalPages %}
                <li class="page-item {% if currentPage == i %}active{% endif %}">
                    <a class="page-link" href="{{ path('app_remise', app.request.query.all|merge({'page': i})) }}">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                <a class="page-link" href="{{ path('app_remise', app.request.query.all|merge({'page': currentPage + 1})) }}">Suivant</a>
            </li>
        </ul>
    </nav>
    {% endif %}
</div>

<script>
    function toggleDetails(id) {
        const detailsRow = document.getElementById('details-' + id);
        const icon = document.getElementById('icon-' + id);
        
        if (detailsRow.classList.contains('d-none')) {
            detailsRow.classList.remove('d-none');
            icon.classList.remove('bi-plus-circle');
            icon.classList.add('bi-dash-circle');
        } else {
            detailsRow.classList.add('d-none');
            icon.classList.remove('bi-dash-circle');
            icon.classList.add('bi-plus-circle');
        }
    }
</script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}